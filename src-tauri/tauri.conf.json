{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "NolanForge",
  "version": "1.0.0",
  "identifier": "com.nolanforge.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "NolanForge - Professional Video Editor",
        "width": 1400,
        "height": 900,
        "minWidth": 1200,
        "minHeight": 800,
        "resizable": true,
        "fullscreen": false,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "NolanForge",
    "copyright": "Copyright Â© 2025 NolanForge",
    "category": "Video",
    "shortDescription": "Professional video editor with trim and export",
    "longDescription": "NolanForge is a modern, professional video editor built with Tauri and React. Features include video trimming, dual timeline for precision editing, and FFmpeg-powered export."
  }
}
